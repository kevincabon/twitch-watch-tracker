{
    "manifest_version": 3,
    "name": "Twitch Watch Tracker",
    "version": "0.4.5",
    "description": "Track your Twitch watch time by streamer and content type!",
    "permissions": ["storage", "tabs"],
    "host_permissions": ["https://www.twitch.tv/*"],
    "content_scripts": [
      {
        "matches": ["https://www.twitch.tv/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png"
      }
    }
  }  